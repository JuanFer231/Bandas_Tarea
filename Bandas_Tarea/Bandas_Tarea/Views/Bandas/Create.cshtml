@model Bandas_Tarea.Models.Bandas

@{
    ViewData["Tittle"] = "Agregar Banda";

}

<style>
    h2 {
        color: whitesmoke;
        background-color: darkblue;
    }
</style>


<h2 align="center">Agregar Nueva banda</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BandaNombre" class="control-label" ></label>
                <input asp-for="BandaNombre" class="form-control" />
                <span asp-validation-for="BandaNombre" class="text-danger"> </span>

                <label asp-for="BandaGenero" class="control-label"></label>
                <input asp-for="BandaGenero" class="form-control" />
                <span asp-validation-for="BandaGenero" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}