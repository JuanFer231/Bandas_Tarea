@model IEnumerable<Bandas_Tarea.Models.Bandas>

@{
    ViewData["Tittle"] = "Bandas";
}


<style>
    h1 {
        color: #00008B;
    }
</style>
<h1 align="center">Bandas Registradas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar</a>
</p>

<div class="table-responsive">
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BandaNombre)
                &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;  &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;  &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;  &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
                @Html.DisplayNameFor(model => model.BandaGenero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BandaNombre)
                    &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;  &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;  &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.DisplayFor(modelItem => item.BandaGenero)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.BandaId"><i class="fas fa-edit"></i> Editar</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.BandaId"><i class="far fa-file-alt"></i> Detalles</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BandaId"><i class="fas fa-trash-alt"></i> Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

